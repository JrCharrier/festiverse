<div class="container-fluid d-flex justify-content-center align-items-center text-center" style="min-height: 100vh; color: black;">
  <div class="row w-100 justify-content-center align-items-center">
    <div class="col-12 col-md-8">
      <h2 class="mb-1" style="font-weight: 700; font-size: 2rem;">
        <%= @genre_display || "Tous les Festivals" %>
      </h2>
      <div class="text-center mb-4">
         <% if @festivals.any? %>
          <% @festivals.each do |festival| %>
            <div class="card-index mb-3" style="display: flex; flex-direction: row; align-items: center;">
              <div class="card-body">
                <h5 class="card-title">
                  <%= festival.name %>
                </h5>
                <p class="card-text text-muted">
                  <strong>From:</strong> <%= festival.start_date %> <br>
                  <strong>To:</strong> <%= festival.end_date %>
                </p>
              </div>
              <div style="flex-shrink: 0; margin-left: 15px;">
                <%= link_to festival_path(festival) do %>
                  <% if festival.images.attached? %>
                    <%= image_tag(festival.images.last, alt: festival.name, class: "card-image") %>
                    <% else %>
                      <p>Image non disponible</p>
                    <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>Aucun festival ne correspond à cette catégorie.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
