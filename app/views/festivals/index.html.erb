<div class="container-fluid d-flex justify-content-center align-items-center text-center" style="min-height: 100vh; color: black;">
  <div class="row w-100 justify-content-center align-items-center">
    <div class="col-12 col-md-8">
      <h2 class="mb-1" style="font-weight: 700; font-size: 2rem;">
        Festiverse
      </h2>
      <div class="text-center mb-4">
        <% @festivals.each do |festival| %>
          <div class="card-index mb-3">
            <%= image_tag("festival1.png", alt: "img-room", class: "card-image") %>
            <div class="card-body" style="padding: 15px; text-align: left;">
              <h5 class="card-title" style="font-weight: 600; font-size: 1.25rem; margin-bottom: 10px;">
                <%= festival.name %>
              </h5>
              <p class="card-text text-muted" style="margin: 0;">
                <strong>From:</strong> <%= festival.start_date %> <br>
                <strong>To:</strong> <%= festival.end_date %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
