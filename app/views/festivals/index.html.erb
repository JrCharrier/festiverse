<div class="container-fluid d-flex justify-content-center align-items-center text-center" style="min-height: 100vh; color: black;">
  <div class="row w-100 justify-content-center align-items-center">
    <div class="col-12 col-md-8">
      <h2 class="mb-1" style="font-weight: 700; font-size: 2rem;">
        Festiverse
      </h2>
      <div class="text-center mb-4">
        <% @festivals.each do |festival| %>
          <div class="card-index mb-3" style="display: flex; flex-direction: row; align-items: center;">
            <div class="card-body" style="padding: 15px; text-align: left; flex: 1;">
              <h5 class="card-title" style="font-weight: 600; font-size: 1.25rem; margin-bottom: 10px;">
                <%= festival.name %>
              </h5>
              <p class="card-text text-muted" style="margin: 0;">
                <strong>From:</strong> <%= festival.start_date %> <br>
                <strong>To:</strong> <%= festival.end_date %>
              </p>
            </div>
            <div style="flex-shrink: 0; margin-left: 15px;">
              <% if festival.image.attached? %>
                <%= image_tag(festival.image, alt: "Festival Image", class: "card-image") %>
              <% else %>
                <div class="card-image-placeholder" style="width: 150px; height: 150px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; font-size: 1rem; color: #888;">
                  Image non disponible
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
